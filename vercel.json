{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  
    "rewrites": [
      { "source": "/(.*)", "destination": "/app.js" }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/home.html"
      },
      {
        "src": "/(.*)",
        "dest": "/app.js"
      },
      {
        "src": "/favicon.ico",
        "status": 204
      }
    ]
  
  
}
